{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "none",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"target": "es2016",
		"lib": [
			"es2017",
			"dom",
			"scripthost"
		],
		"typeRoots": [
			"./Typings"
		]
	},
	"include": [
		"./"
	]
}